<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongratsBerhasilLogin"
    android:background="@color/main_color"
    >


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="430dp"
        android:layout_height="352dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/splash_element"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash_icon" />
        <ImageView
            android:id="@+id/splash_walpaper"
            android:layout_width="430dp"
            android:layout_height="352dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splashwalpaper" />
    </FrameLayout>

    <ImageView

        android:id="@+id/imageView"

        android:layout_width="200dp"
        android:layout_height="196dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/checklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bentonbold"
        android:text="Congrats!"
        android:textColor="@color/ui_color"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/sub_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bentonbold"
        android:text="Your profile is ready to use"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congrats" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/ui_color"
        android:fontFamily="@font/bentonbold"
        android:paddingLeft="55dp"
        android:paddingTop="20dp"
        android:paddingRight="55dp"
        android:paddingBottom="20dp"
        android:text="Try"
        android:textSize="20dp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_congrats"
        android:layout_marginTop="250dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>