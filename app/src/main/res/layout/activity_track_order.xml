<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".SetLocation"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color">



        <com.google.android.material.button.MaterialButton
            android:id="@+id/google"
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:backgroundTint="#251c13"
            android:layout_marginTop="38dp"
            android:paddingLeft="45dp"
            android:paddingTop="39.5dp"
            android:paddingRight="35dp"
            android:paddingBottom="20dp"
            android:text="test"
            android:textSize="19dp"
            app:cornerRadius="22dp"
            app:icon="@drawable/baseline_arrow_back_ios_24"
            app:iconGravity="textTop"
            app:iconSize="@android:"
            app:iconTint="#ba6317"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            app:layout_constraintTop_toBottomOf="@+id/google">


            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/splash_element"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_fruit" />


            <TextView
                android:textColor="@color/white"
                android:id="@+id/headDeliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/bentonbold"
                android:text="Track Order"
                android:textSize="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="70dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#2B2A2A"
                    android:backgroundTint="#2B2A2A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardCornerRadius="22dp">

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="#2B2A2A"

                        android:backgroundTint="#2B2A2A">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:background="#2B2A2A"
                            android:backgroundTint="#2B2A2A"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#2B2A2A">

                                <ImageView
                                    android:id="@+id/img_item_photo"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:scaleType="centerCrop"
                                    card_view:layout_constraintBottom_toBottomOf="parent"
                                    card_view:layout_constraintStart_toStartOf="parent"
                                    card_view:layout_constraintTop_toTopOf="parent"
                                    tools:src="@tools:sample/avatars" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/Green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/bentosanmedium"
                            android:text="Green Noddle"
                            android:textSize="17.5dp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="25dp"
                            app:layout_constraintStart_toEndOf="@+id/card_view4"
                            app:layout_constraintTop_toTopOf="parent" />

<!--                        <TextView-->
<!--                            android:id="@+id/Noodle"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="20dp"-->
<!--                            android:layout_marginTop="7dp"-->
<!--                            android:fontFamily="@font/bentonregular"-->
<!--                            android:text="Noddle Home"-->
<!--                            android:textColor="#3B3B3B"-->
<!--                            app:layout_constraintStart_toEndOf="@+id/img_item_photo"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/Green" />-->


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>