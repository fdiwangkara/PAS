<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Onboarding2"
    android:background="@color/main_color">

  <ImageView
      android:id="@+id/img_onboarding2"
      android:layout_width="408.5dp"
      android:layout_height="wrap_content"
      android:src="@drawable/onboarding_2"
      android:layout_marginTop="70dp"/>

 <TextView
     android:id="@+id/onboarding_title"
     android:layout_width="348dp"
     android:layout_height="wrap_content"
     android:text="Food Ninja is Where Your Comfort Food Lives"
     android:fontFamily="@font/bentonbold"
     android:textSize="27dp"
     android:lineHeight="29sp"
     android:textAlignment="center"
     android:layout_gravity="center"
     android:layout_marginTop="100dp"
     android:textColor="@color/white" />

    <TextView
        android:id="@+id/onboarding_subtitle"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:text="Enjoy a fast and smooth food delivery at your doorstep"
        android:fontFamily="@font/bentonbook"
        android:textAlignment="center"
        android:textSize="12dp"
        android:lineHeight="22sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="175dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextLast"
        android:layout_gravity="center"
        android:fontFamily="@font/bentonbold"
        android:textSize="20dp"
        android:layout_marginTop="330dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Next"
        app:cornerRadius="14dp"
        android:backgroundTint="@color/ui_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</FrameLayout>