<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Filter"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"

        >


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="359dp"
            android:layout_height="202dp"
            android:src="@drawable/icon_home_fruit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:lineHeight="45dp"
            android:layout_marginTop="70dp"
            android:id="@+id/sub_congrats"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/bentonbold"
            android:text="Find Your Favorite Food"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.button.MaterialButton

            app:iconTint="@color/ui_color"
            app:icon="@drawable/baseline_notifications_24"
            app:iconGravity="textTop"
            android:text="test"
            app:iconSize="@android:"
            android:id="@+id/google"
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#252525"
            android:paddingLeft="37dp"
            android:paddingTop="40dp"
            android:paddingRight="37dp"
            android:paddingBottom="20dp"
            android:textSize="19dp"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sub_congrats" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="30dp"
            android:id="@+id/user_Password"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonregular"
            android:hint="What do you want to order?"
            android:textColorHighlight="@color/white"
            android:textColorHint="#555050"
            app:startIconDrawable="@drawable/search"
            app:startIconTint="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_congrats">

            <com.google.android.material.textfield.TextInputEditText

                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="62.5dp"
                android:background="@drawable/edt_input"
                android:cursorVisible="false"
                android:fontFamily="@font/bentonregular"
                android:paddingStart="20dp"
                android:textColor="#92929D"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/Nearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonbold"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_Password" />

        <com.google.android.material.button.MaterialButton
            app:iconSize="24dp"
            android:id="@+id/googlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"

            android:paddingTop="20dp"
            android:layout_marginTop="15dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingBottom="20dp"
            android:text="Restaurant"
            app:iconGravity="textEnd"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Nearest" />

        <com.google.android.material.button.MaterialButton
            app:iconSize="24dp"
            android:layout_marginTop="15dp"
            android:id="@+id/Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingBottom="20dp"

            android:text="Menu"
            app:iconGravity="textEnd"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:layout_constraintStart_toEndOf="@+id/googlee"
            app:layout_constraintTop_toBottomOf="@+id/Nearest" />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonbold"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/googlee" />

        <com.google.android.material.button.MaterialButton
            app:iconSize="24dp"
            android:layout_marginTop="15dp"
            android:id="@+id/Restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingBottom="20dp"
            android:text="1 Km"
            app:iconGravity="textEnd"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Location" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Lebih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:text=">10 Km"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/Restaurant"
            app:layout_constraintTop_toBottomOf="@+id/Location" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Kurang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:text="<10 Km"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/Lebih"
            app:layout_constraintTop_toBottomOf="@+id/Location" />


        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/Food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonbold"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Restaurant" />



        <com.google.android.material.button.MaterialButton
            app:iconSize="24dp"
            android:layout_marginTop="15dp"
            android:id="@+id/Cake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingBottom="20dp"
            android:text="Cake"
            app:iconGravity="textEnd"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Food" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Soup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:text="Soup"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/Cake"
            app:layout_constraintTop_toBottomOf="@+id/Food" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:text="Main Course"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/Soup"
            app:layout_constraintTop_toBottomOf="@+id/Food"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Apetizzer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:text="Apetizzer"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cake" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Dessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#252525"
            android:fontFamily="@font/bentosanmedium"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:paddingRight="24dp"
            android:paddingBottom="20dp"
            android:text="Dessert"
            android:textSize="17dp"
            app:cornerRadius="23dp"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:layout_constraintStart_toEndOf="@id/Apetizzer"
            app:layout_constraintTop_toBottomOf="@+id/Cake" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/ui_color"
            android:fontFamily="@font/bentonbold"
            android:paddingLeft="55dp"
            android:paddingTop="20dp"
            android:paddingRight="55dp"
            android:paddingBottom="20dp"
            android:text="Next"
            android:textSize="20dp"
            app:cornerRadius="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Dessert" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>